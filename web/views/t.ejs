<html>
<head>
    <title>Web Page</title>
    <script src="https://unpkg.com/react/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom/umd/react-dom.development.js"></script>
    <script src="https://unpkg.com/@babel/standalone/babel.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"></link>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }
    </style>
</head>
<body>
    <div id="root"></div>
    <script type="text/babel">
        const App = () => {
            const [searchTerm, setSearchTerm] = React.useState("");
            const items = Array(10).fill().map((_, index) => ({
                id: index,
                name: "WhatsApp",
                stock: Math.floor(Math.random() * 20000),
                price: Math.floor(Math.random() * 100) + 340
            }));

            const filteredItems = items.filter(item =>
                item.name.toLowerCase().includes(searchTerm.toLowerCase())
            );

            return (
                <div className="bg-blue-500 min-h-screen flex flex-col">
                    <div className="flex items-center p-4 bg-blue-500 text-white">
                        <img src="https://placehold.co/40x40" alt="User avatar" className="rounded-full w-10 h-10 mr-2" />
                        <span>Haikal</span>
                        <i className="fas fa-bell ml-auto"></i>
                    </div>
                    <div className="bg-white p-4 m-4 rounded-lg shadow-md flex justify-around">
                        <div className="flex flex-col items-center">
                            <i className="fas fa-home text-xl"></i>
                            <span>Rumah</span>
                        </div>
                        <div className="flex flex-col items-center">
                            <i className="fas fa-exchange-alt text-xl"></i>
                            <span>Transaksi</span>
                        </div>
                        <div className="flex flex-col items-center">
                            <i className="fas fa-plus-circle text-xl"></i>
                            <span>Top up</span>
                        </div>
                        <div className="flex flex-col items-center">
                            <i className="fas fa-gift text-xl"></i>
                            <span>Reedem</span>
                        </div>
                    </div>
                    <div className="bg-white p-4 m-4 rounded-lg shadow-md">
                        <div className="flex items-center justify-between">
                            <div>
                                <p className="text-gray-500">Jumlah Saldo</p>
                                <p className="text-2xl font-bold">350.000</p>
                            </div>
                            <div className="flex items-center">
                                <i className="fas fa-wallet text-black mr-2"></i>
                                <i className="fas fa-plus text-black mr-2"></i>
                                <i className="fas fa-headphones text-black"></i>
                            </div>
                        </div>
                    </div>
                    <div className="bg-white p-4 m-4 rounded-lg shadow-md">
                        <input
                            type="text"
                            placeholder="Layanan pencarian, negara, at..."
                            className="w-full p-2 border rounded-lg"
                            value={searchTerm}
                            onChange={(e) => setSearchTerm(e.target.value)}
                        />
                    </div>
                    <div className="bg-white p-4 m-4 rounded-lg shadow-md flex-1 overflow-y-auto">
                        <h2 className="text-lg font-bold mb-4">Melayani</h2>
                        {filteredItems.map(item => (
                            <div key={item.id} className="flex items-center justify-between p-4 mb-2 bg-gray-100 rounded-lg">
                                <div className="flex items-center">
                                    <img src="https://placehold.co/40x40" alt="WhatsApp logo" className="w-10 h-10 mr-2" />
                                    <div>
                                        <p className="font-bold">{item.name}</p>
                                        <p className="text-gray-500">Stok {item.stock}</p>
                                    </div>
                                </div>
                                <div className="flex items-center">
                                    <img src="https://placehold.co/20x20" alt="Active status icon" className="w-5 h-5 mr-2" />
                                    <span className="bg-green-200 text-green-700 px-2 py-1 rounded-lg">Aktif</span>
                                    <span className="ml-4">Rp {item.price}</span>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            );
        };

        ReactDOM.render(<App />, document.getElementById('root'));
    </script>
</body>
</html>